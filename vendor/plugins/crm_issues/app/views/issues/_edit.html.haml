.remote
  = link_to_close edit_issue_path
  - remote_form_for(@issue) do |f|
    = f.hidden_field :user_id
    = f.error_messages
    = render :partial => "issues/top_section", :locals => { :f => f }
    = render :partial => "issues/permissions", :locals => { :f => f }
    .buttonbar
      = f.submit "Save Issue", :onclick => %/$("account_assigned_to").value = $F("issue_assigned_to"); if ($("account_id").visible()) { $("account_id").enable(); }/
      or
      = link_to_cancel edit_issue_path
