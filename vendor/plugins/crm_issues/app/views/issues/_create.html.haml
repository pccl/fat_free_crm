- remote_form_for(@issue) do |f|
  = link_to_close new_issue_path
  = f.hidden_field :user_id
  = f.error_messages
  = render :partial => "issues/top_section", :locals => { :f => f }
  = render :partial => "issues/permissions", :locals => { :f => f }
  .buttonbar
    = f.submit "Create Issue", :onclick => %/$("account_assigned_to").value = $F("issue_assigned_to"); if ($("account_id").visible()) { $("account_id").enable(); }/
    or
    = link_to_cancel new_issue_path
